<odoo>
    <data>
        <record id="acquirer_form_paytabs" model="ir.ui.view">
            <field name="name">acquirer.form.paytabs</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment.payment_provider_form"/>
            <field name="arch" type="xml">
                <group name='provider_credentials' position='inside'>
                    <group invisible="code != 'paytabs'">
                        <field name="paytabs_client_id" required="code  == 'paytabs'"/>
                        <field name="paytabs_client_secret" required="code == 'paytabs'"/> 
                        <field name="paytabs_domain" required="code == 'paytabs'"/> 
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>
