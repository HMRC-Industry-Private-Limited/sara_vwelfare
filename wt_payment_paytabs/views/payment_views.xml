<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_inherited" model="ir.ui.view">
        <field name="name">payment.provider.form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'paytabs'">
                    <field name="paytabs_profile_id"
                        required="code == 'paytabs'"/>
                    <field name="server_key" 
                        required="code == 'paytabs'"/>
                    <field name="client_key"
                        required="code == 'paytabs'"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
