<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.website_skip_hide_address</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='website_checkout_registration']" position="after">
                    <setting help="Never require customers to input their address">
                        <field name="always_skip_address"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>