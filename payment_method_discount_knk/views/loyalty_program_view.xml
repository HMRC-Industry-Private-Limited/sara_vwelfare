<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the existing form view of the loyalty program -->
    <record id="view_loyalty_program_form_inherit" model="ir.ui.view">
        <field name="name">loyalty.program.form.inherit</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_from']" position="before">
                <field name="payment_provider_id" />
            </xpath>
        </field>
    </record>
</odoo>