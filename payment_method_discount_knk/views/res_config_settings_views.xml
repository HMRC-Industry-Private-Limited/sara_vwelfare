<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_payment_discount" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.payment.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pricing_setting_container']" position="inside">
                <setting id="payment_method_discount_setting" title="Payment Method Discount Setting" help="Configure discounts for payment methods">
                    <field name="payment_method_discount" />
                    <div class="content-group mt16" invisible="not payment_method_discount">
                        <div class="row">
                            <label string="Discount Account" for="payment_discount_account_id" class="col-lg-3 o_light_label"/>
                            <field name="payment_discount_account_id"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>