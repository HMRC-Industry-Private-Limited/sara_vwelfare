<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_payment_register_form_custom" model="ir.ui.view">
        <field name="name">account.payment.register.form.custom</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="before">
                <field name="original_amount" readonly="1" invisible="1" />
            </xpath>
        </field>
    </record>
    <record id="view_move_form_inherit_sale_invoice_discount_type" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.sale_invoice_discount_type</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="before">
                <group invisible="move_type in ('in_invoice')">
                    <field name="discount_method" style='width: 100px;' readonly="state != 'draft'" invisible="state != 'draft'"/>
                    <field name="discount_fix" invisible="discount_method != 'fix'" readonly="state != 'draft'"/>
                    <field name="discount_per" invisible="discount_method != 'percentage'" readonly="state != 'draft'"/>
                    <div style="width: 200px;">
                         <button name="update_price" string="Update Total" type="object" class="btn-primary" invisible="state != 'draft'" />
                    </div><br/><br/><br/>
                </group>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="total_discount" invisible="move_type in ('in_invoice')"/>
            </xpath>
        </field>
    </record>
</odoo>