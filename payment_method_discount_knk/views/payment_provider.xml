<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="form_payment_acquirer_ws_payment_method_discount" model="ir.ui.view">
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='credentials']" position="after">
                <page string="Discount Settings" name="discount_settings">
                    <group>
                        <!-- <field name="product_ids" invisible="discount_type == 'none'" widget="many2many_tags" /> -->
                        <field name="discount_applied" />
                        <field name="discount_method" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>