<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_test_type_tree" model="ir.ui.view">
    <field name="name">test.type.tree</field>
    <field name="model">test.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="total_score" />
      </tree>
    </field>
  </record>

  <record id="view_test_type_form" model="ir.ui.view">
    <field name="name">test.type.form</field>
    <field name="model">test.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group string="General Info">
              <field name="name" />
              <field name="description" />
              <field name="total_score" />
              <field name="image" widget="image" class="oe_avatar" />
            </group>
          </group>

          <notebook>
            <page string="Questions">
              <field name="question_ids">
                <tree editable="bottom">
                  <field name="name" />
                  <field name="question_type" />
                  <field name="score" />
                  <field name="option_ids" widget="one2many_list">
                    <tree editable="bottom">
                      <field name="option_text" />
                      <field name="score" />
                    </tree>
                  </field>
                </tree>
              </field>
            </page>
            <page string="Result Lines">
              <field name="result_line_ids">
                <tree editable="bottom">
                  <field name="test_id" />
                  <field name="min_score" />
                  <field name="max_score" />
                  <field name="result_text" />
                  <field name="result_class" />
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_test_type" model="ir.actions.act_window">
    <field name="name">Tests Types</field>
    <field name="res_model">test.type</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>